<div class="d-flex align-items-center">
  <h1>掲示板一覧</h1>
  <div class="ml-auto boards__linkBox">
    <%= link_to "新規作成", new_task_path, class: "btn btn-outline-dark" %>
  </div>
</div>
<table class="table table-hover boards__table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task|%>
      <tr>
        <td><%= task.id%></td>
        <td><%= task.title%></td>
        <td><%= task.name%></td>
        <td><%= task.created_at.to_s(:datetime_jp)%></td>
        <td><%= task.updated_at.to_s(:datetime_jp)%></td>
        <td><%= link_to "詳細", task, class: "btn btn-outline-dark"%></td>
      </tr>
    <%end%>
  </tbody>
</table>