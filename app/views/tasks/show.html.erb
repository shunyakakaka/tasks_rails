<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto boards__linkBox">
    <%= link_to "一覧", tasks_path, class: "btn btn-outline-dark"%>
    <%= link_to "編集", edit_task_path, class: "btn btn-outline-dark"%>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h4><%= @task.title%></h4>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(@task.body)%></p>
    <p class="text-right font-weight-bold mr-10"><%= @task.name%></p>
  </div>
</div>
